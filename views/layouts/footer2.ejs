<html>
    <style>
        footer{
            padding-left: 8px;
            padding-top: 1.5px;
            font-size: 8pt;
            border-top: solid black 1px;
            border-spacing: 8px;
            padding-bottom: 8px;
        }
        .dark, footer {
            color: white;
            border-top: solid white 1px;
        }
        .white, footer {
            color: black;
            border-top: solid black 1px;
        }
    </style>
    <div id="data">
