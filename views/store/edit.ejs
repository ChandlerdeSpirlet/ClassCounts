        </tr>
        <tr>
            <td>Regular</td>
            <td><input type="number" name="reg" min="0" max="9999999" value="<%= reg %>"/></td>
        </tr>
        <tr>
            <td>Sparring</td>
            <td><input type="number" name="spar" min="0" max="9999999" value="<%= spar %>"/></td>
        </tr>
        <tr>
            <td>SWATs</td>
            <td><input type="number" name="swat" min="0" max="9999999" value="<%= swat %>"/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Update"/></td>
        </tr>
    </table>
</form>

