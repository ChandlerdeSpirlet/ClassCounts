<!--Including Header Partial-->
<%- include ../layouts/header3.ejs %>

<!--Using if-check to see if an error occurred and displaying appropriate message-->
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<% if (messages.success) { %>
    <p style="color:blue"><%- messages.success %></p>
<% } %>
<script type="text/javascript">
    var err = <%- JSON.stringify(messages) %>;
    console.log(err);
</script>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
#blackbelts {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

#blackbelts td, #blackbelts th {
    border: 1px solid #ddd;
    padding: 8px;
}

#blackbelts tr:nth-child(even){background-color: #f2f2f2;}

#blackbelts tr:hover {background-color: #ddd;}

#blackbelts th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: blue;
    color: white;
}
thead {
    position:sticky;
}

input[type=text] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=text]:focus {
        width: 100%;
    }
    input[type=date] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=date]:focus {
        width: 100%;
    }
    [type=submit] {
    background-color: blue; /* Green */
    border: none;
    color: white;
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    }

    [type=submit] {
        background-color: white; 
        color: black; 
        border: 2px solid blue;
    }

    [type=submit]:hover {
        background-color: blue;
        color: white;
    }
    body {
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
    }
</style>
</head>
<body>
<form action="/store/changelog" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Version</td>
            <td><input type="text" pattern="[0-9]*[.][0-9]*[.][0-9]*" name="version" id="version" value="<%= version %>"/></td>
        </tr>
        <tr>
            <td>Date</td>
            <td><input type="date" name="date" id="date" value="<%= date %>"/></td>
        </tr>
        <tr>
            <td>Change</td>
            <td><input type="text" name="change" id="change" value="<%= change %>"/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Add"/></td>
        </tr>
    </table>
</form>
<div style="overflow-x:auto">
<table id="blackbelts">
    <thead>
        <tr>
            <th>Version</th>
            <th>Date</th>
            <th>Change</th>
        </tr>
    </thead>
    <tbody>
        <% if (data) { %>
        <!-- Using a for-loop to loop over each row in the database.
        The 'data' variable is passed from the store.js during the response.render function call -->
            <% data.forEach(function(item){ %>
                <tr>
                    <td><%= item.ver %></td>
                    <td><%= item.date %></td>
                    <td><%= item.changes %></td>
                </tr>
            <% }) %>
        <% } %>
    </tbody>
</table>
</div>
</body>
</html>

