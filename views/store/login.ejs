<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<style> 
    body {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    }
    input[type=text] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=text]:focus {
        width: 100%;
    }
    input[type=password] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=password]:focus {
        width: 100%;
    }
    [type=submit] {
    background-color: blue; /* Green */
    border: none;
    color: white;
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    }

    [type=submit] {
        background-color: white; 
        color: black; 
        border: 2px solid blue;
    }

    [type=submit]:hover {
        background-color: blue;
        color: white;
    }
    .dark, td {
        color: white;
    }
    .white, td {
        color: black;
    }
    .dark, body {
        background-color: black;
    }
    .white, body {
        background-color: white;
    }
    .dark, [type=submit] {
        background-color: #333;
    }
    .white, [type=submit] {
        background-color: white;
    }
    .dark, [type=submit]:hover {
        color: white;
    }
    .white, [type = submit]:hover {
        color: white;
    }
    .dark, input[type=text], input[type=password] {
        background-color: #333;
        color: white;
        border: 2px solid white;
    }
    .white, input[type=text], input[type=password] {
        background-color: white;
        color: black;
        border: 2px solid black;
    }
</style>
<div id="data">
<form action="/store/login" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Username</td>
            <td><input type="text" name="bbuser" id="userid" value="<%= bbuser %>"/></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="bbpass" id="userpass" value="<%= bbpass %>"/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Login"/></td>
        </tr>
    </table>
</form>
</head>
</div>
<script>
    window.onload = function() {timeFunc()};
    function timeFunc(){
        var options = {
        timeZone: "America/Denver", hour12: false,
        hour: 'numeric', minute: 'numeric'
    };
    var formatter = new Intl.DateTimeFormat('en-us', options);
    var localTime = formatter.format(new Date());
    localTime = localTime.replace(':', '');
    var SunCalc = require('suncalc2');
    var times = SunCalc.getTimes(new Date(), 39.7392, 104.9903);
    var sunriseStr = (times.sunrise.getHours() -11).toString() + (times.sunrise.getMinutes() + 33).toString();
    var sunset = (times.sunset.getHours() + 14).toString() + (times.sunset.getMinutes() - 1).toString();
    var sunrise = parseInt(sunriseStr);
    var sunset = parseInt(sunset);
    var localTime = parseInt(localTime);
    var dataStuff = document.getElementById("data");
    if (localTime >= sunrise && localTime < sunset){
        dataStuff.classList.remove("dark");
        dataStuff.classList.add("white");
    }
    else if (localTime >= sunset){
        dataStuff.classList.add("dark");
    }
    else if (localTime < sunrise){
        dataStuff.classList.add("dark");
    } else {
        dataStuff.classList.remove("dark");
    }
    }
</script>
