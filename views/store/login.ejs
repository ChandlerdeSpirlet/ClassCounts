<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<!--Create a form to take input from user-->
<form action="/store/login" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Username</td>
            <td><input type="text" name="bbuser" id="userid" value="<%= bbuser %>"/></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="bbpass" id="userpass" value="<%= bbpass %>"/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Login"/></td>
        </tr>
    </table>
</form>

<!--Including Footer partial-->
<%- include ../layouts/footer.ejs %>
