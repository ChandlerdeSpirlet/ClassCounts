    cursor: pointer;
    }

    [type=submit] {
        background-color: white; 
        color: black; 
        border: 2px solid blue;
    }

    [type=submit]:hover {
        background-color: blue;
        color: white;
    }
    input:invalid+span:after {
        content: 'âœ–';
        color: black;
        padding-left: 10px;
        position: fixed;
        padding-top: 15px;
    }
    .dark input:invalid+span:after {
        color: white;
    }
    .white input:invalid+span:after {
        color: black;
    }
    .dark td {
        color: white;
    }
    .white td {
        color: black;
    }
    .dark {
        height: 100%;
        background-color: black;
    }
    .white {
        height: 100%;
        background-color: white;
    }
    .dark body {
        background-color: black;
        height: 100%;
    }
    .dark [type=submit] {
        background-color: #333;
    }
    .white [type=submit] {
        background-color: white;
    }
    .dark [type=submit]:hover {
        color: white;
    }
    .white [type=submit] {
        color: black;
    }
    .dark input[type=email] {
