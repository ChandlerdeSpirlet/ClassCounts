<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<style> 
    body {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        margin: 0px;
    }
    input[type=text] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=text]:focus {
        width: 100%;
    }
    input[type=textarea] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=textarea]:focus {
        width: 100%;
    }
    input[type=email] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=email]:focus {
        width: 100%;
    }
    [type=submit] {
    background-color: blue; /* Green */
    border: none;
    color: white;
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    }

    [type=submit] {
        background-color: white; 
        color: black; 
        border: 2px solid blue;
    }

    [type=submit]:hover {
        background-color: blue;
        color: white;
    }
    input:invalid+span:after {
        content: 'âœ–';
        color: black;
        padding-left: 10px;
        position: fixed;
        padding-top: 15px;
    }
    .dark, input:invalid+span:after {
        color: white;
    }
    .white, input:invalid+span:after {
        color: black;
    }
    .dark, td {
        color: white;
    }
    .white, td {
        color: black;
    }
    .dark, body {
        background-color: black;
    }
    .white, body {
        background-color: white;
    }
    .dark, [type=submit] {
        background-color: #333;
    }
    .white, [type=submit] {
        background-color: white;
    }
    .dark, [type=submit]:hover {
        color: white;
    }
    .white, [type=submit] {
        color: black;
    }
    .dark, input[type=email], input[type=textarea], input[type=text] {
        background-color: #333;
        color: white;
        border: 2px solid white;
    }
    .white, input[type=email], input[type=textarea], input[type=text] {
        background-color: white;
        color: black;
        border: 2px solid black;
    }
</style>
<!--Create a form to take input from user-->
<div id="data">
<form action="/store/email" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" id="name" pattern="[A-z]{1,20}+"  min="1" maxlength="20" value="<%= name %>"/>
                <span class="validity"></span></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type="email" name="email" id="email" pattern="\b[A-z0-9._%+-]+@[A-z0-9.-]+\.[A-z]{2,}\b" min=" @ . " minlength="5" value="<%= email %>"/>
                <span class="validity"></span></td>
        </tr>
        <tr>
            <td>Response</td>
            <td><input type="textarea" name="text" min=" " minlength="1" value="<%= text %>"/>
                <span class="validity"></span></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Send"/></td>
        </tr>
    </table>
</form>
</div>
</head>
<script>
    window.onload = function() {timeFunc()};
    function timeFunc(){
        var options = {
        timeZone: "America/Denver", hour12: false,
        hour: 'numeric', minute: 'numeric'
    };
    var formatter = new Intl.DateTimeFormat('en-us', options);
    var localTime = formatter.format(new Date());
    localTime = localTime.replace(':', '');
    var SunCalc = require('suncalc2');
    var times = SunCalc.getTimes(new Date(), 39.7392, 104.9903);
    var sunriseStr = (times.sunrise.getHours() -11).toString() + (times.sunrise.getMinutes() + 33).toString();
    var sunset = (times.sunset.getHours() + 14).toString() + (times.sunset.getMinutes() - 1).toString();
    var sunrise = parseInt(sunriseStr);
    var sunset = parseInt(sunset);
    var localTime = parseInt(localTime);
    var dataStuff = document.getElementById("data");
    if (localTime >= sunrise && localTime < sunset){
        dataStuff.classList.remove("dark");
        dataStuff.classList.add("white");
    }
    else if (localTime >= sunset){
        dataStuff.classList.add("dark");
    }
    else if (localTime < sunrise){
        dataStuff.classList.add("dark");
    } else {
        dataStuff.classList.remove("dark");
    }
    }
    </script>
