<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<style> 
    body {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    }
    input[type=text] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=text]:focus {
        width: 100%;
    }
    input[type=number] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=number]:focus {
        width: 100%;
    }
    [type=submit] {
    background-color: blue; /* Green */
    border: none;
    color: white;
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    }

    [type=submit] {
        background-color: white; 
        color: black; 
        border: 2px solid blue;
    }

    [type=submit]:hover {
        background-color: blue;
        color: white;
    }
    input:invalid+span:after {
        content: '✖';
        color: black;
        padding-left: 10px;
        position: fixed;
        padding-top: 15px;
    }

    input:valid+span:after {
        content: '✓';
        color: blue;
        padding-left: 10px;
        position: fixed;
        padding-top: 15px;
    }
</style>
<!-- The action attribute of the form refers to a item using its database id -->
<form action="/store/alter/<%= barcode %>" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Name</td>
            <td><input type="text" name="bbname" id="bbname" pattern="[A-z]{1,20}+" min="1" maxlength="20" value="<%= bbname %>" required/></td>
        </tr>
        <tr>
            <td>Barcode</td>
            <td><input type="number" pattern="\b[0-9]{5}\b" name="barcode" min="0" max="99999" value="<%= barcode %>" required/></td>
        </tr>
        <tr>
            <td>Regular</td>
            <td><input type="number" pattern="\b[0-9]{5}\b" name="regular" min="0" max="99999" value="<%= regular %>" required/></td>
        </tr>
        <tr>
            <td>Sparring</td>
            <td><input type="number" pattern="\b[0-9]{5}\b" name="spar" min="0" max="99999" value="<%= spar %>" required/></td>
        </tr>
        <tr>
            <td>Swats</td>
            <td><input type="number" pattern="\b[0-9]{5}\b" name="swat" min="0" max="99999" value="<%= swat %>" required/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Edit"/></td>
        </tr>
    </table>
    <input type="hidden" name="_method" value="PUT"/>
</form>

